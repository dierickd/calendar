{% extends 'base.html.twig' %}

{% block title %}Config{% endblock %}

{% block body %}
    <h1>Config</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ config.id }}</td>
            </tr>
            <tr>
                <th>Opening</th>
                <td>{{ config.opening ? config.opening|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Is_open_holidays</th>
                <td>{{ config.isOpenHolidays ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_config_index') }}">back to list</a>

    <a href="{{ path('app_config_edit', {'id': config.id}) }}">edit</a>

    {{ include('config/_delete_form.html.twig') }}
{% endblock %}
